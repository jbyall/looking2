@model IEnumerable<Looking2.Web.Domain.Category>
@{
    ViewData["Title"] = "ADMIN";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 centered-column">
            <h1>CHOOSE A FORM TO EDIT</h1>
        </div>
    </div>
    @foreach (var item in Model)
    {
        if (item.Active && item.Type == ListingCategory.Event)
        {
            string name = item.Name;
            <div class="row">
                <div class="col-md-3 right-column">
                    <a asp-action="EditEventForm" asp-controller="Admin" asp-route-name="@name">@item.DisplayName</a>
                </div>
                <div class="col-md-9">
                    <p>@item.Description</p>
                </div>
            </div>
        }

        if (item.Active && item.Type == ListingCategory.Business)
        {
            string name = item.Name;
            <div class="row">
                <div class="col-md-3 right-column">
                    <a asp-action="EditBusinessForm" asp-controller="Admin" asp-route-name="@name">@item.DisplayName</a>
                </div>
                <div class="col-md-9">
                    <p>@item.Description</p>
                </div>
            </div>
        }

    }

    <div class="row">
        <div class="col-md-3 right-column">
            <h3>Not Implemented Yet:</h3>
        </div>
        <div class="col-md-9">

        </div>
    </div>

    @foreach (var item in Model)
    {
        if (!item.Active)
        {
            <div class="row">
                <div class="col-md-3 right-column">
                    <p><bold>@item.DisplayName</bold></p>
                </div>
                <div class="col-md-9">
                    <p>@item.Description</p>
                </div>
            </div>
        }
    }

</div>

