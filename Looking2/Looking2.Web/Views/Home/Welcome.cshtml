@{
    ViewData["Title"] = "Welcome";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 centered-column">
            <h1>Welcome to the Looking2 Database</h1>
            <h2>Explore!</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4 centered-column">
            <h2>FIND A LISTING</h2>
            <h3>free</h3>
            <ul class="list-group">
                <li class="list-group-item">
                    <a asp-action="Index" asp-controller="Events">Events</a>
                </li>
                <li class="list-group-item">
                    <a asp-action="Index" asp-controller="Businesses">Businesses</a>
                </li>
            </ul>
        </div>

        <div class="col-sm-4">
            @*<img style="margin-left:auto;margin-right:auto;display:block;" src="~/images/logo.jpg" />*@
            <img style="margin-left:auto;margin-right:auto;display:block;" src="~/images/L2_slightcurve_net.jpg" />
        </div>

        <div class="col-sm-4 centered-column">
            <h2>MAKE A LISTING</h2>
            <h3>free</h3>
            <ul class="list-group">
                <li class="list-group-item">
                    <a asp-action="CategoryIndex" asp-controller="Events">Events</a>
                </li>
                <li class="list-group-item">
                    <a asp-action="CategoryIndex" asp-controller="Businesses">Businesses</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10 col-md-offset-1 text-center">
            <h4>JUST SEARCH RESULTS, CLEANLY &amp; FAIRLY PRESENTED</h4>
            <p>
                Looking2 is an online database designed to help businesses and events looking to be found by people looking to find them.
                We provide a level playing field to all our Listers: no ads, no favoritism, no 'sponsored' listings, no close-but-not quites.
                We do not track searches in any personally identifiable manner, or ask for any personal information.
            </p>
            
            <h4>Looking is​​​​​<em> FREE</em>, Listing is <em>CHEAP</em>​ (well, actually<em> FREE</em> until further notice ....)</h4> 
        </div>

    </div>
</div>