<form id="search-form">
    <div class="form-horizontal">
        <hr />
        <h4>Search:</h4>
        <div class="form-group">
            <label class="col-md-2 control-label">Description:</label>
            <div class="col-md-10">
                <input type="text" id="text-query" class="form-control" autocomplete="off"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Location:</label>
            <div class="col-md-10">
                <input type="text" id="location-query" class="form-control" autocomplete="off"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4" style="padding-left:0.9em">
                @*<input type="submit" value="Search" class="btn btn-default glyphicon-search"/>*@
                <button type="submit" class="btn btn-default">
                    <span class="glyphicon glyphicon-search"></span> Search
                </button>
            </div>
        </div>
    </div>
</form>

@*NOTE - Logic for form submit in parent view (Index.cshtml)*@