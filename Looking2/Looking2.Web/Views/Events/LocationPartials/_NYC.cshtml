@model EventDetailsViewModel
<form asp-controller="Events" asp-action="CreateLocation">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        @Html.HiddenFor(model => model.Listing.Location[0], new { @value = "NY"})

        <div class="form-group">
            <label class="col-md-4 control-label">Which Borough are you in?</label>
            <div class="col-md-8">
                <input asp-for="Listing.Location[1]" class="form-control" />
                <span asp-validation-for="Listing.Location[1]" class="text-danger"></span>
            </div>
        </div>

        @Html.HiddenFor(model => model.Listing.Location[2], new { @value = "NYC"})

        <div class="form-group">
            <label class="col-md-4 control-label">What neighborhood in that Borough?</label>
            <div class="col-md-8">
                <input asp-for="Listing.Location[3]" class="form-control" />
                <span asp-validation-for="Listing.Location[3]" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label">What street, road, or route are you on?</label>
            <div class="col-md-8">
                <input asp-for="Listing.Location[4]" class="form-control" />
                <span asp-validation-for="Listing.Location[4]" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label">What is your number on that street, road, or route?</label>
            <div class="col-md-8">
                <input asp-for="Listing.Location[5]" class="form-control" />
                <span asp-validation-for="Listing.Location[5]" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label">Any landmarks or other location assistance for those driving?</label>
            <div class="col-md-8">
                <input asp-for="Listing.Location[6]" class="form-control" />
                <span asp-validation-for="Listing.Location[6]" class="text-danger"></span>
            </div>
        </div>

        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>